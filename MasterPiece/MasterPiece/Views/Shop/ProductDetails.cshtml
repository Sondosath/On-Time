@model MasterPiece.Models.Product
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p><strong>Price:</strong> @Model.Price JD</p>
            <p><strong>Description:</strong> @Model.Description</p>

            <form asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-dark mt-3">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                </button>
            </form>

        </div>
    </div>
</div>
