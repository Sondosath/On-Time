                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </section>
        <!-- end slider section -->
    </div>



    <!-- ***** Main Banner Area Start ***** -->
    <div class="main-banner" id="top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <div class="left-content">
                        <div class="thumb">
                            <div class="inner-content ">

                                <video autoplay muted loop class="background-video" style="height: 850px">
                                    <source src="/images/shop.mp4" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>

                            </div>
                        </div>

                    </div>
                </div>
                <!-- </div> -->

                <div class="col-lg-6">
                    <div class="right-content">
                        <div class="row">
                            @foreach (var category in Model)
                            {
                                <div class="col-lg-6">
                                    <div class="right-first-image">

                                        <div class="thumb">

                                            <div class="inner-content">
                                                <h4>@category.Name </h4>
                                                @* <span>Elegant floral arrangements with premium touches</span> *@
                                            </div>
                                            <div class="hover-content">
                                                <div class="inner">
                                                    <h4>@category.Name</h4>
                                                    <p>
                                                        @category.Description
                                                    </p>
                                                    <div class="main-border-button">
                                                        <a asp-controller="Shop" asp-action="CategoryProducts" asp-route-id="@category.Id">Discover More</a>

                                                    </div>
                                                </div>
                                            </div>
                                            <img src="/images/@category.ImageUrl">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--men area start-->
    <section class="section" id="men">
        @foreach (var category in Model)
        {
            <div class="container">
                <div class="row">

                    <div class="col-lg-6">
                        <div class="section-heading">
                            <h2>@category.Name</h2>
                            <span>@category.Description</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="men-item-carousel">
                            <div class="owl-men-item owl-carousel owl-loaded owl-drag">
                                <div class="owl-stage-outer">
                                    <div class="owl-stage" style="width: 3200px; transform: translate3d(-960px, 0px, 0px); transition: all;">
                                        @foreach (var product in category.Products)
                                        {
                                        <div class="owl-item active" style="width: 290px; margin-right: 30px;">
                                            <div class="item">
                                              
                                                    <div class="thumb">
                                                        <div class="hover-content">
                                                            <ul>
                                                                <li>
                                                                    <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-sm" style="color: #37060a;"><i class="fas fa-eye"></i></a>
                                                                </li>
                                                                @* <li><a href="single-product.html"><i class="fa fa-star"></i></a></li> *@
                                                                <li>
                                                                    <a asp-controller="Shop" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-sm" style="color: #37060a;"><i class="fas fa-cart-plus"></i></a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                        <img src="/images/@product.ImageUrl" alt="@product.Name">
                                                    </div>
                                                    <div class="down-content">
                                                        <h4>@product.Name</h4>
                                                        <span> @product.Price JD</span>
                                                        <ul class="stars">
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                        </ul>

                                                    </div>

                                                </div>
                                            </div>
                                         }
                                              
                                          <div class="owl-nav">
                                              <button type="button" role="presentation" class="owl-prev">
                                                  <span aria-label="Previous">‹</span>
                                                  </button>
                                              <button type="button" role="presentation" class="owl-next">
                                                  <span aria-label="Next">›</span>
                                              </button>
                                          </div>
                                          <div class="owl-dots">
                                              <button role="button" class="owl-dot active">
                                                   <span></span>
                                               </button>
                                              <button role="button" class="owl-dot">
                                                   <span></span>
                                               </button>
                                          </div>
                        </div>
                        </div>
                            </div>

                    </div>
                </div>
            </div>
            </div>
        }
    </section>
  
