    <script>

        JD(function() {
            var selectedClass = "";
            JD("p").click(function(){
            selectedClass = JD(this).attr("data-rel");
            JD("#portfolio").fadeTo(50, 0.1);
                JD("#portfolio div").not("."+selectedClass).fadeOut();
            setTimeout(function() {
              JD("."+selectedClass).fadeIn();
              JD("#portfolio").fadeTo(50, 1);
            }, 500);

            });
        });

    </script>
