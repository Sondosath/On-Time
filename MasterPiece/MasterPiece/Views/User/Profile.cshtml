@model User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="/css/profile.css" rel="stylesheet">
    <!-- Add Font Awesome CDN link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css">


</head>
<body>
    <div class="page-content page-container" id="page-content">


        <div class="home-btn">
            <a href="/Home/Index">
                <i class="fas fa-home home-icon"></i> <!-- Font Awesome Home Icon -->
            </a>
        </div>
        <div class="padding">
            <div class="row container d-flex justify-content-center" style="width:100vh; margin-left: 20%;">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">

                                <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                            <img src="@Model.Image" class="img-radius" alt="Profile Picture" width="150" height="150">
                                     @* <img src="" alt="Profile Picture" width="150" height="150"> *@
                                           
                                            <input type="file" name="profilePic" />

                                            
                                    </div>
                                        <input class="f-w-600" type="text" name="Name" value="@Model.Name" required />
                                        <input type="text" name="Address" value="@Model.Address" />

                                    
                                   
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                                <input class="text-muted f-w-400" type="email" name="Email" value="@Model.Email" required />

                                          
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone</p>
                                                <input class="text-muted f-w-400" type="text" name="Phone" value="@Model.Phone" />

                                        </div>
                                    </div>
                                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                                        <li>
                                            @* <a href="@Url.Action("EditProfile", "User", new { id = ViewBag.UserId })" >Edit Profile</a> *@
                                                <button class="logout-btn"  type="submit">Update Profile</button>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
